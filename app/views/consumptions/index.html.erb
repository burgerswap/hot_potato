<div class="body-content">
<div class="row">
<div class="panel height40">
<h1>Listing Leftovers</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Food type</th>
      <th>Quantity</th>
      <th>Available from</th>
      <th>Available to</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leftovers.each do |leftover| %>
      <tr>
        <td><%= leftover.title %></td>
        <td><%= leftover.address %>, <%= leftover.pincode %></td>
        <td><%= leftover.food_type %></td>
        <td><%= leftover.current_quantity %></td>
        <td><%= leftover.available_from %></td>
        <td><%= leftover.available_to %></td>
        <td><%= leftover.status %></td>
        <td>
          <%= form_for(@consumption) do |f| %>
          <%= f.number_field :quantity %>|
          <%= f.hidden_field :leftover_id,:value => leftover.id   %>|
          <%= f.submit %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

